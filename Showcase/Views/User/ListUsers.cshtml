@model IEnumerable<UserWithGamesViewModel>

<h2>Registered Users and Played Games</h2>

<table>
    <thead>
        <tr>
            <th>Gebruikersnaam</th>
            <th>E-mailadres</th>
            <th>Gespeelde spellen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <button class="expand-btn" data-target="#games-@user.UserId">Show Games</button>
                    <div id="games-@user.UserId" class="games-list" style="display: none;">
                        <ul>
                            @foreach (var game in user.PlayedGames)
                            {
                                <li>Spel ID: @game.GameId, Winnaar: @game.Result, Datum: @game.DatePlayed</li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.querySelectorAll('.expand-btn').forEach(button => {
            button.addEventListener('click', () => {
                const target = document.querySelector(button.getAttribute('data-target'));
                if (target.style.display === 'none') {
                    target.style.display = 'block';
                    button.textContent = 'Spellen Verbergen';
                } else {
                    target.style.display = 'none';
                    button.textContent = 'Spellen Weergeven';
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        .games-list {
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
}
