@{
    ViewData["Title"] = "Contact";
    var contactName = ViewBag.ContactPerson;
}
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/contact.css">
</head>
<body>
    <div class="page">
        <section class="contact">

            <div class="container">
                <h2>Contactformulier @contactName</h2>
                <form>
                    <div class="form-group">
                        <label for="onderwerp">Onderwerp:</label>
                        <input type="text" id="subject" name="subject" maxlength="10" rows="2" cols="20" required>
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="bericht">Bericht:</label>
                        <textarea id="msg" name="msg" maxlength="10" rows="5" cols="40" required></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Verzenden</button>
                </form>
            </div>

        </section>
    </div>

</body>
